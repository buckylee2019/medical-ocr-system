{
  "family": "medical-ocr-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/medical-ocr-task-role",
  "containerDefinitions": [
    {
      "name": "medical-ocr-container",
      "image": "YOUR_ACCOUNT.dkr.ecr.us-west-2.amazonaws.com/medical-ocr:latest",
      "portMappings": [
        {
          "containerPort": 5006,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-west-2"
        },
        {
          "name": "DYNAMODB_TABLE_NAME",
          "value": "medical-ocr-data"
        },
        {
          "name": "S3_BUCKET",
          "value": "your-medical-ocr-bucket"
        },
        {
          "name": "FLASK_ENV",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/medical-ocr",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5006/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
